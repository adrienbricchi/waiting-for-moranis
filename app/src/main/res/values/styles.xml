<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/settingsColorPrimary</item>
        <item name="colorPrimaryDark">@color/settingsColorPrimaryDark</item>
        <item name="android:statusBarColor">@color/settingsStatusBarColor</item>
        <item name="android:windowLightStatusBar">@bool/settingsWindowLightStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="colorSurface">@color/grey_900</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AppTheme.Settings.Dialog</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <!-- For some reason, MaterialComponents.DayNight.Dialog's color are bad, -->
    <!-- So we use the AppCompat.DayNight.Dialog theme -->
    <style name="AppTheme.Settings.Dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
